#!/bin/sh -e

pushd /tmp/src

if [ "$(ls /tmp/artifacts/ 2>/dev/null)" ]; then
    echo "---> Restoring build artifacts (node_modules)"
    mv /tmp/artifacts/* .
fi

echo "---> Installing NPM Dependencies (with dev)"
npm config set registry http://nexus.o-rechtspraak.minjus.nl/repository/npm-all
npm install
npm install --only=dev

echo "---> Building Angular CLI Application"
./node_modules/@angular/cli/bin/ng build --prod

popd

if [ -d "/tmp/src/os3/conf" ]; then
    echo "---> Overwriting default.conf and nginx.conf"
    cp -Rf /tmp/src/os3/conf/nginx.conf /etc/nginx/nginx.conf
    cp -Rf /tmp/src/os3/conf/default.conf /etc/nginx/conf.d/default.conf
fi


echo "---> Installing application to web container"
cp -Rf /tmp/src/dist/. /usr/share/nginx/html/


#echo "---> Removing application source"
#rm -rf /tmp/src